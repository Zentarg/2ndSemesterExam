<Page
    x:Class="AdministratorApp.Views.EmployeesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AdministratorApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    xmlns:dc="using:AdministratorApp.ViewModels"
    MinWidth="1200">

    <Page.DataContext>
        <dc:EmployeesPageVM/>
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid Row="0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text ="Sort By:" FontSize="20" VerticalAlignment="Center" Margin="15,0,0,0"></TextBlock>
                <TextBlock Text ="Name" FontSize="20" VerticalAlignment="Center" Margin="15,0,0,0"></TextBlock>
                <TextBlock Text ="Address" FontSize="20" VerticalAlignment="Center" Margin="15,0,0,0"></TextBlock>
                <TextBlock Text ="Telephone" FontSize="20" VerticalAlignment="Center" Margin="15,0,0,0"></TextBlock>
            </StackPanel>
        </Grid>
        <Grid Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid Column="0">
                <ListView ItemsSource="{Binding DictUsers}"
                          SelectedItem="{Binding SelectedEmp, Mode=TwoWay}">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="dc:EmployeesPageVM">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="10,0,0,0" Text="{Binding Name}"/>
                                <TextBlock Margin="10,0,0,0" Text="{Binding Address}"/>
                                <TextBlock Margin="10,0,0,0" Text="{Binding Telephone}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
            <Grid Column="1" BorderBrush="AliceBlue" BorderThickness="2">
                <StackPanel Margin="25,25,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Column="0" Text="Name" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Name}" PlaceholderText="Enter Name" VerticalAlignment="Center" Width="300" HorizontalAlignment="Left"></TextBox>

                        <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Address"/>
                        <TextBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Text="{Binding Address}" PlaceholderText="Enter Address" Width="300" HorizontalAlignment="Left"></TextBox>

                        <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Telephone" HorizontalAlignment="Left"/>
                        <TextBox Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Text="{Binding Telephone}" PlaceholderText="Enter Telephone" HorizontalAlignment="Left" Width="300"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="Role"/>
                        <TextBox x:Name="RoleText" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Text="{Binding Role}" PlaceholderText="Enter Role" Width="300" HorizontalAlignment="Left"></TextBox>
                        <TextBlock Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Margin="330,0,0,0" Text="--Or--"></TextBlock>
                        <ComboBox IsEnabled="{Binding IsEmployeeSelected}" SelectedItem="{Binding SelectedRole, Mode=TwoWay}" ItemsSource="{Binding Roles}" PlaceholderText="Select Role" Grid.Row="3" Grid.Column="1" Margin="400,0,0,0" Width="300" VerticalAlignment="Center"></ComboBox>

                        <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="Salary"/>
                        <TextBox Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" Text="{Binding Salary}" PlaceholderText="Enter Salary" Width="300" HorizontalAlignment="Left"></TextBox>

                        <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Text="Salary with Tax"/>
                        <TextBox Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" Text="{Binding SalaryWTax}" PlaceholderText="Enter Salary w/ Tax" Width="300" HorizontalAlignment="Left"></TextBox>

                        <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Text="Works At"/>
                        <TextBox Grid.Row="6" Grid.Column="1" VerticalAlignment="Center" PlaceholderText="Enter Place of Work" Width="300" HorizontalAlignment="Left"></TextBox>

                        <TextBlock Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Text="TAJ Number"/>
                        <TextBox Grid.Row="7" Grid.Column="1" VerticalAlignment="Center" PlaceholderText="Enter the TAJ Number" Width="300" HorizontalAlignment="Left"></TextBox>

                        <TextBlock Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" Text="Tax Number"/>
                        <TextBox Grid.Row="8" Grid.Column="1" VerticalAlignment="Center" PlaceholderText="Enter the Tax Number" Width="300" HorizontalAlignment="Left"></TextBox>

                        <TextBlock Grid.Row="9" Grid.Column="0" VerticalAlignment="Center" Text="Working Hours"/>
                        <TextBox Grid.Row="9" Grid.Column="1" VerticalAlignment="Center" PlaceholderText="Enter the working hours" Width="300" HorizontalAlignment="Left"></TextBox>
                    </Grid>

                    <Grid Margin="0,50,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Column="0" Text="UserName" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="TestUserName" VerticalAlignment="Center" Width="300" HorizontalAlignment="Left"></TextBlock>

                        <TextBlock Grid.Column="0" Grid.Row="1" Text="Password" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="**********" VerticalAlignment="Center" Width="300" HorizontalAlignment="Left"></TextBlock>
                        <Button Grid.Row="1" Grid.Column="1" Content="Generate" Margin="100,0,0,0"></Button>
                    </Grid>



                    

                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,50,50">
                    <Button Content="Delete" Margin="0,0,10,0"/>
                    <Button Content="Cancel"  Margin="0,0,10,0"/>
                    <Button Content="Confirm"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
