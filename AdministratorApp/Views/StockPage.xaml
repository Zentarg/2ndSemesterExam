<Page
    x:Class="AdministratorApp.Views.StockPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AdministratorApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="using:AdministratorApp.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.DataContext>
        <viewModel:StockPageViewModel/>
    </Page.DataContext>

    <Page.Resources>
        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="Height" Value="45" />
            <Setter Property="Width" Value="75" />
        </Style>

        <Style x:Key="BasicTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="175" />
        </Style>
    </Page.Resources>

        <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Sort by:" FontSize="14" />
            </StackPanel>


            <ListView Name="StockListView" Grid.Column="0" Grid.Row="1" ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem, Mode=TwoWay}"  SelectionMode="Single" SelectionChanged="Selector_OnSelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="#"/>
                        <TextBlock Text="{Binding Id}" Margin="0,0,15,0"/>
                        <TextBlock Text="{Binding Name}"/>
                    </StackPanel>

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
            <TextBlock Grid.Column="0" Grid.Row="0" Text="{Binding Stock[0].Name}"></TextBlock>

        <ScrollViewer Name="ItemPanel" Grid.Column="1" Grid.Row="1" >
            <StackPanel Width="450">
            
                <StackPanel Orientation="Horizontal" Margin="15,15,15,0">
                    <TextBlock Text="Name:" Margin="0,0,6,0" />
                    <TextBlock Text="{Binding SelectedItem.Name, Mode=TwoWay}"  />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="15,15,15,0">
                    <TextBlock Text="Amount:" Margin="0,0,6,0" />
                    <Button Style="{StaticResource MenuButton}" Height="35" Width="35" Content="&#xE70D;" Visibility="Collapsed" />
                    <TextBlock Text="{Binding SelectedItem, Mode=TwoWay}"   />
                    <Button Style="{StaticResource MenuButton}" Height="35" Width="35" Content="&#xE70E;" Visibility="Collapsed"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="15,15,15,0">
                    <TextBlock Text="Type:" Margin="0,0,6,0" />
                    <TextBlock Text="{Binding Amount, Mode=TwoWay}"   />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="15,15,15,0">
                    <TextBlock Text="Price:" Margin="0,0,6,0" />
                    <TextBlock Text="{Binding SelectedItem, Mode=TwoWay}"  />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="15,15,15,0">
                    <TextBlock Text="Discount:" Margin="0,0,6,0" />
                    <TextBlock Text="{Binding SelectedItem.Name, Mode=TwoWay}"  />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="15,15,15,0">
                    <TextBlock Text="Store:" Margin="0,0,6,0" />
                    <TextBlock Text="{Binding SelectedItem, Mode=TwoWay}"  />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="15,15,15,0">
                    <TextBlock Text="Color:" Margin="0,0,6,0" />
                    <TextBlock Text="{Binding SelectedItem.Color, Mode=TwoWay}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="15,15,15,0">
                    <TextBlock Text="Size:" Margin="0,0,6,0" />
                    <TextBlock Text="{Binding SelectedItem.Size, Mode=TwoWay}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="15,15,15,0">
                    <TextBlock Text="Barcode:" Margin="0,0,6,0" />
                    <TextBlock Text="{Binding SelectedItem.Barcode, Mode=TwoWay}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="15,15,15,0">
                    <TextBlock Text="Picture:" Margin="0,0,6,0" />
                    <Image Source="{Binding SelectedItem.PictureSource, Mode=TwoWay}" MaxWidth="250" MaxHeight="250" />
                </StackPanel>


            </StackPanel>
            </ScrollViewer>
    </Grid>
</Page>
